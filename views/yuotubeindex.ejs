<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>YouTube Utility</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .thumbnail-img {
            max-width: 100px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="mt-5 mb-4">YouTube Utility</h1>

    <!-- Tab navigation -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="transcribe-tab" data-bs-toggle="tab" data-bs-target="#transcribe" type="button" role="tab" aria-controls="transcribe" aria-selected="true">Transcribe Video</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="search-tab" data-bs-toggle="tab" data-bs-target="#search" type="button" role="tab" aria-controls="search" aria-selected="false">Search Videos</button>
        </li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content" id="myTabContent">
        <!-- Transcribe Video Tab -->
        <div class="tab-pane fade show active" id="transcribe" role="tabpanel" aria-labelledby="transcribe-tab">
            <div class="mt-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="videoURLInput" placeholder="Enter YouTube video URL">
                    <button class="btn btn-outline-secondary" type="button" onclick="submitVideoId()">Submit</button>
                </div>
                <div id="transcriptResults" class="mt-3"></div>
            </div>
        </div>

        <!-- Search Videos Tab -->
        <div class="tab-pane fade" id="search" role="tabpanel" aria-labelledby="search-tab">
            <div class="mt-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search for videos">
                    <button class="btn btn-primary" onclick="searchVideos()">Search</button>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Thumbnail</th>
                        </tr>
                    </thead>
                    <tbody id="searchResults"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper and custom scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="scripts/main.js"></script>
</body>
</html>
